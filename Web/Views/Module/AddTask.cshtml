@model Web.Models.ViewModels.CreateTaskViewModel

<h2>Adding a task</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    @Html.ValidationSummary(true, "")
    <p>Number of task: @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })</p>
    <p>Name of task: @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
    <p>Description: @Html.TextAreaFor(model => model.Description, 10, 1, htmlAttributes: new { @class = "form-control" })</p>
    <p>Note: @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })</p>
    <p>Materials: @Html.EditorFor(model => model.Materials, new { htmlAttributes = new { @class = "form-control" } })</p>
    @Html.ActionLink("Add Material", "AddMaterial", "Module", htmlAttributes: new { @class = "btn btn-success", @style = "background-color:#720D5D" })
    <button class="btn btn-success" value="Добавить" style="background-color:#720D5D">
        <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span>
        Добавить
    </button>
</div>
}